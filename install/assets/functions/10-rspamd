  }
  generic_reputation =  {
    selector "generic" {
      selector = "ip"; # see https://rspamd.com/doc/configuration/selectors.html
    }
    backend "redis" {
    }

    symbol = "GENERIC_REPUTATION";
  }
}
EOF
		fi
	fi
}

