	if var_true "${ENABLE_REPUTATION}" ; then
		if [ "${SETUP_TYPE,,}" = "auto" ]; then
		    print_notice "Configuring Reputation"
			cat <<EOF > /etc/rspamd/local.d/reputation.conf
